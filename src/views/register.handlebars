<div class="container mt-4">
  <div class="card text-center">
    <div class="card-header">
      Regístrese
    </div>
    <form
      class="row g-3 needs-validation mx-1"
      name="formRegister"
      id="formRegister"
      action="/api/register"
      method="POST"
      novalidate
    >
      <div class="col-md-6">
        <label for="name" class="form-label mt-2">Nombre</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Ingrese su nombre"
          {{! required }}
        />
        <div class="invalid-feedback">
          Ingrese su nombre!
        </div>
      </div>
      <div class="col-md-6">
        <label for="lastname" class="form-label mt-2">Apellido</label>
        <input
          type="text"
          class="form-control"
          id="lastname"
          name="lastname"
          placeholder="Ingrese su apellido"
          {{! required }}
        />
        <div class="invalid-feedback">
          Ingrese su apellido!
        </div>
      </div>
      <div class="col-md-4">
        <label for="age" class="form-label">Edad</label>
        <input
          type="number"
          class="form-control"
          id="age"
          name="age"
          placeholder="Ingrese su edad"
          {{! required }}
        />
        <div class="invalid-feedback">
          Ingrese su edad!
        </div>
      </div>
      <div class="col-md-8">
        <label for="email" class="form-label">Email</label>
        <div class="input-group has-validation">
          <span class="input-group-text">@</span>
          <input
            type="email"
            class="form-control"
            aria-describedby="inputGroupPrepend"
            id="email"
            name="email"
            placeholder="Ingrese su email"
            {{! required }}
          />
          <div class="invalid-feedback">
            Ingrese su email!
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <label for="password" class="form-label">Contraseña</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Ingrese una contraseña"
          {{! required }}
        />
        <div class="invalid-feedback">
          Ingrese una contraseña!
        </div>
      </div>
      <div class="col-md-6">
        <label for="passwordRepit" class="form-label">Repita la contraseña</label>
        <input
          type="password"
          class="form-control"
          id="passwordRepit"
          name="passwordRepit"
          placeholder="Repita la contraseña"
          {{! required }}
        />
        <div class="invalid-feedback">
          Repita la contraseña!
        </div>
      </div>

      <div class="col-12">
        {{#if hasError}}
          <p class="mt-1 bg-danger text-white form-control">{{error}}</p>
        {{/if}}
        <button
          type="submit"
          class="btn btn-primary mb-3"
          name="btnRegister"
          id="btnRegister"
        >Enviar registro</button>
      </div>
    </form>

  </div>
</div>

