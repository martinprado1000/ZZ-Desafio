<div class="mx-3 mt-2">
  <div class="row d-flex">
    <div class="col-5">
      <form
        name="formProducts"
        id="formProducts"
        class="needs-validation col-12"
        enctype="multipart/form-data"
        novalidate
      >
        <input name="id" type="hidden" id="id" />
        <div class="col-md">
          <label for="title" class="form-label">Título del producto</label>
          <input
            name="title"
            class="form-control"
            id="title"
            placeholder="Ingrese un título"
            value="{{data.title}}"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="col-md">
          <label for="description" class="form-label">Descripción</label>
          <input
            name="description"
            type="text-area"
            class="form-control"
            id="description"
            placeholder="Ingrese una descripción"
            value="{{data.description}}"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="col-md">
          <label for="price" class="form-label">Precio</label>
          <input
            name="price"
            type="number"
            class="form-control"
            id="price"
            placeholder="Ingrese el precio"
            value="{{data.price}}"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="col-md">
          <label for="code" class="form-label">Codigo</label>
          <input
            name="code"
            type="text"
            class="form-control"
            id="code"
            placeholder="Ingrese el código"
            value="{{data.code}}"
            required
          />
          <div class="invalid-feedback">
            Please provide a valid city.
          </div>
        </div>
        <div class="col-md">
          <label for="category" class="form-label">Categoria</label>
          <select
            name="category"
            type="text"
            class="form-control"
            id="category"
            placeholder="Ingrese la categoria"
            required
          >
            <option >{{data.category}}</option>
            {{!-- <option value="pc">PC</option> --}}
            <option value="monitor">Monitor</option>
            <option value="teclado">Teclado</option>
          </select>
          <div class="invalid-feedback">
            Please provide a valid city.
          </div>
        </div>
        <div class="col-md">
          <label for="stock" class="form-label">Cantidad</label>
          <input
            name="stock"
            type="number"
            class="form-control"
            id="stock"
            placeholder="Ingrese la cantidad"
            value="{{data.stock}}"
            required
          />
          <div class="invalid-feedback">
            Please provide a valid zip.
          </div>
        </div>
        <div class="col-md">
          <label for="thumbnail" class="form-label">Imagenes</label>
          <input
            name="thumbnail"
            type="file"
            class="form-control"
            id="thumbnail"
            placeholder="Ingrese URL de las imagenes"
            value="{{data.thumbnail}}"
            required
          />
          <div class="invalid-feedback">
            Please provide a valid zip.
          </div>
        </div>
        <div class="row">
          <div class="col-6 mt-1">
            <button
              class="btn btn-success mt-2"
              type="submit"
              name="btnformProducts"
              id="submit"
            >Editar</button>
            <button
              class="btn btn-danger btn mt-2"
              id="cancelUpdate"
            >Cancelar edicion</button>
          </div>

        </div>
      </form>
      {{! <button
        class="btn btn-primary btn-sm mt-1"
        id="update"
        disabled
      >Actualizar</button> }}

    </div>

    <div class="col-9">

    </div>

  </div>
</div>

